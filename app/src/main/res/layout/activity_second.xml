<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageZigZag"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"></ImageView>

        <CheckBox
            android:id="@+id/checkBoxLose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose things"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkBoxRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember names"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkBoxLearn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn things quickly"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkBoxKeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep track of multiple things"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:onClick="onCheckboxClicked"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>